@model List<WebApp.ViewModels.StudentViewModel>

@{
    ViewBag.Title = "Index";
}

<div class="card elevation-3">
    <div class="card-header">Student List
    
    <div class="card-tools">
        <a href="/admin/student/create">
            <i class="fa fa-plus"></i>
        </a>
    </div>
    </div>
    <div class="card-body">
        @if (Model == null || Model.Count == 0)
        {
            <span class="alert alert-danger" role="alert">
                No Records Found
            </span>
        }
        else
        {
            <table id="tblStudent" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Full Name</th>
                        <th>Class Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.FullName</td>
                        <td>@item.ClassName</td>
                        <td>
                            <a href="/admin/student/edit/@item.Id">
                                <i class="fa fa-edit"></i>
                            </a>  
                            &nbsp; &nbsp;
                            <a href="/admin/student/delete/@item.Id">
                                <i class="fa fa-trash" style="color:red"></i>
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

@section Styles{
    <!-- DataTables -->
    <link rel="stylesheet" href="~/Themes/Admin/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/Themes/Admin/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/Themes/Admin/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
}

@section Scripts{
    <!-- DataTables  & Plugins -->
    <script src="~/Themes/Admin/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Themes/Admin/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Themes/Admin/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/Themes/Admin/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/Themes/Admin/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/Themes/Admin/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="~/Themes/Admin/plugins/jszip/jszip.min.js"></script>
    <script src="~/Themes/Admin/plugins/pdfmake/pdfmake.min.js"></script>
    <script src="~/Themes/Admin/plugins/pdfmake/vfs_fonts.js"></script>
    <script src="~/Themes/Admin/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="~/Themes/Admin/plugins/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="~/Themes/Admin/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#tblStudent').DataTable({
                "responsive": true,
                "lengthChange": false,
                "autoWidth": true,
            });

        });
    </script>
}